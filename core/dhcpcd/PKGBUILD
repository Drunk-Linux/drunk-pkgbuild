# Description: Implementation of the DHCP client specified in RFC2131
# URL:         
# Maintainer:  Emmett1, emmett1 dot 2miligrams at gmail dot com
# Depends on:  

pkgname=dhcpcd
pkgver=9.4.0
bootscriptspkgver=20210110
pkgrel=1
arch=('x86_64')
source=(https://roy.marples.name/downloads/dhcpcd/dhcpcd-$pkgver.tar.xz)

build() {
	cd $pkgname-$pkgver

	./configure --libexecdir=/lib/dhcpcd \
                    --dbdir=/var/lib/dhcpcd
	make
}

package() {
	cd $pkgname-$pkgver

	make DESTDIR=$pkgdir install

	mkdir -p $pkgdir/etc/sysconfig/
	cat > $pkgdir/etc/sysconfig/ifconfig.eth0 << "EOF"
ONBOOT="no"
IFACE="eth0"
SERVICE="dhcpcd"
#DHCP_START="-b -q <insert appropriate start options here>"
#DHCP_STOP="-k <insert additional stop options here>"
EOF
}
