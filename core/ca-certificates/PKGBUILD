# Description: Certificate Authority certificates
# URL:         
# Maintainer:  Emmett1, emmett1 dot 2miligrams at gmail dot com
# Depends on:  p11-kit openssl

pkgname=ca-certificates
pkgver=20211026
_pkgver=${pkgver:0:4}-${pkgver:4:2}-${pkgver:6:2}
pkgrel=1
arch=('x86_64')
source=(https://curl.se/ca/cacert-$_pkgver.pem)

package() {	
	install -Dm644 $pkgdir/../../cacert-$_pkgver.pem $pkgdir/etc/ssl/cert.pem
}
