pkgname=libunistring
pkgver=1.0
pkgrel=1
arch=('i686')
depends=(glibc)
makedepends=(make)
source=(https://ftp.gnu.org/gnu/libunistring/libunistring-$pkgver.tar.xz)

build() {
	cd $pkgname-$pkgver

	./configure		\
	--prefix=/usr

	make
}

package() {
	cd $pkgname-$pkgver

	make DESTDIR=$pkgdir install
}
