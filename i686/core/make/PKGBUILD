pkgname=make
pkgver=4.3
pkgrel=1
arch=('i686')
depends=(m4 gcc ncurses)
source=(https://ftp.gnu.org/gnu/make/make-$pkgver.tar.gz)

build() {
	cd $pkgname-$pkgver

	./configure		\
	--prefix=/usr		\
	--without-guile		\
	--without-libintl

	make
}

package() {
	cd $pkgname-$pkgver

	make DESTDIR=$pkgdir install
}
