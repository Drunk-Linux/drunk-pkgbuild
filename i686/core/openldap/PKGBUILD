pkgname=openldap
pkgver=2.4.0
pkgrel=1
arch=('i686')
source=(https://www.openldap.org/software/download/OpenLDAP/openldap-release/openldap-$pkgver.tgz)

build() {
        cd $pkgname-$pkgver

        ./configure		\
	--prefix=/usr		\
	--sysconfdir=/etc
        
	make
}

package() {
        cd $pkgname-$pkgver

        make DESTDIR=$pkgdir install
}
