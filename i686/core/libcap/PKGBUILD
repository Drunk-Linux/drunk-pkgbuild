pkgname=libcap
pkgver=2.62
pkgrel=1
arch=('i686')
depends=(glibc)
makedepends=(gcc)
source=(https://www.kernel.org/pub/linux/libs/security/linux-privs/libcap2/libcap-$pkgver.tar.xz)

build() {
	cd $pkgname-$pkgver

	make prefix=/usr
}

package() {
	cd $pkgname-$pkgver

	make prefix=$pkgdir/usr install
}
