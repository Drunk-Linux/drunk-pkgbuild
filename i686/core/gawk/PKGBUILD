pkgname=gawk
pkgver=5.1.1
pkgrel=1
arch=('i686')
depends=(glibc readline mpfr gmp)
makedepends=(gcc)
source=(https://ftp.gnu.org/gnu/gawk/gawk-$pkgver.tar.xz)

prepare() {
	cd $pkgname-$pkgver

	sed -i 's/extras//' Makefile.in
}

build() {
	cd $pkgname-$pkgver

	./configure		\
	--prefix=/usr

	make
}

package() {
	cd $pkgname-$pkgver

	make DESTDIR=$pkgdir install
}
