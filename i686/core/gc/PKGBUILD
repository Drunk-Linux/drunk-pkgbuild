pkgname=gc
pkgver=8.0.6
pkgrel=1
arch=('i686')
depends=(glibc)
makedepends=(make)
source=(https://www.hboehm.info/gc/gc_source/gc-$pkgver.tar.gz)

build() {
	cd $pkgname-$pkgver

	./configure		\
	--prefix=/usr		\
	--enable-cplusplus

	make
}

package() {
	cd $pkgname-$pkgver

	make DESTDIR=$pkgdir install
}
