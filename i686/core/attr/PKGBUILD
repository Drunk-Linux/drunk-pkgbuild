pkgname=attr
pkgver=2.5.1
pkgrel=1
arch=('i686')
depends=(glibc)
makedepends=(gcc)
source=(https://download.savannah.gnu.org/releases/attr/attr-$pkgver.tar.gz)

build() {
	cd $pkgname-$pkgver

	./configure		\
	--prefix=/usr		\
	--sysconfdir=/etc

	make
}

package() {
	cd $pkgname-$pkgver

	make DESTDIR=$pkgdir install
}
