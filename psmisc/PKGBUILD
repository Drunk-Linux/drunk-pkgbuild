# Description: Programs for displaying information about running processes
# URL:         
# Maintainer:  Emmett1, emmett1 dot 2miligrams at gmail dot com
# Depends on:  

pkgname=psmisc
pkgver=23.4
pkgrel=1
arch=('x86_64')
source=(https://sourceforge.net/projects/psmisc/files/psmisc/psmisc-$pkgver.tar.xz)

build() {
        cd $pkgname-$pkgver

        ./configure --prefix=/usr
        make
}

package() {
        cd $pkgname-$pkgver
        make DESTDIR=$pkgdir install

        mkdir -p $pkgdir/bin
        mv -v $pkgdir/usr/bin/fuser   $pkgdir/bin
        mv -v $pkgdir/usr/bin/killall $pkgdir/bin
}
