# Description: Modular initramfs image creation utility
# URL:         
# Maintainer:  Emmett1, emmett1 dot 2miligrams at gmail dot com
# Depends on:  libarchive bash

pkgname=mkinitramfs
pkgver=2021.12.02
pkgrel=1
arch=('x86_64')
source=("mkinitramfs"
	"init.in")

build() {
        echo "done"
}

package() {
	mkdir -p $pkgdir/usr/sbin/
	mkdir -p $pkgdir/usr/share/mkinitramfs/

	cp -f mkinitramfs $pkgdir/usr/sbin/mkinitramfs
	cp -f init.in $pkgdir/usr/share/mkinitramfs/init.in

	chmod 0755 $pkgdir/usr/sbin/mkinitramfs
}
