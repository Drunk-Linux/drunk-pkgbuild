# Description: Modular initramfs image creation utility
# URL:         
# Maintainer:  Emmett1, emmett1 dot 2miligrams at gmail dot com
# Depends on:  libarchive bash

pkgname=mkinitramfs
pkgver=20200118
pkgrel=1
arch=('x86_64')
source=(https://github.com/venomlinux/mkinitramfs/archive/$pkgver/$pkgname-$pkgver.tar.gz
        https://github.com/venomlinux/mkinitramfs/commit/2b323335ff368f0bbd40ed7cd907648b2e35bcc1.patch)

build() {
        cd $pkgname-$pkgver
        patch -Np1 -i ../../2b323335ff368f0bbd40ed7cd907648b2e35bcc1.patch
}

package() {
        cd $pkgname-$pkgver

        DESTDIR=$pkgdir ./INSTALL.sh
}
