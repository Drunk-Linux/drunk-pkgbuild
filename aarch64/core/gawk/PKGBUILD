pkgname=gawk
pkgver=5.1.1
pkgrel=1
arch=('aarch64')
depends=(bash glibc)
source=(https://ftp.gnu.org/gnu/$pkgname/$pkgname-$pkgver.tar.xz)

build() {
        cd $pkgname-$pkgver

        # ensure some unneeded files are not installed
        sed -i 's/extras//' Makefile.in

        ./configure --prefix=/usr --host=aarch64-linux-gnu
        make
}

package() {
	cd $pkgname-$pkgver
        make DESTDIR=$pkgdir install
}
