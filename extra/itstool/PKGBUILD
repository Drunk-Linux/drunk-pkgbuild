pkgname=itstool
pkgver=2.0.6
pkgrel=1
arch=('x86_64')
depends=(docbook-xml)
source=(http://files.itstool.org/$pkgname/$pkgname-$pkgver.tar.bz2)

build() {
	cd $pkgname-$pkgver
	PYTHON=/usr/bin/python3.9 ./configure --prefix=/usr --libdir=/usr/lib
	make
}

package() {
	cd $pkgname-$pkgver
	make DESTDIR=$pkgdir install
}
