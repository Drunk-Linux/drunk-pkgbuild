pkgname=xfdesktop
pkgver=4.16.0
pkgrel=1
arch=('x86_64')
depends=(exo libwnck)
makedepends=()
source=(https://archive.xfce.org/src/xfce/$pkgname/4.16/$pkgname-$pkgver.tar.bz2)

build() {
	cd $pkgname-$pkgver

	./configure		\
	--prefix=/usr		\
	--sysconfdir=/etc	\
	--disable-debug		\
	LIBS=-lX11

	make
}

package() {
	cd $pkgname-$pkgver

	make DESTDIR=$pkgdir install
}
