pkgname=vte
pkgver=0.66.0
pkgrel=1
arch=('x86_64')
depends=(gtk+ libxml2 pcre2 icu vala gobject-introspection)
source=(https://gitlab.gnome.org/GNOME/$pkgname/-/archive/$pkgver/$pkgver-$pkgver.tar.bz2)

build() {
	cd $pkgname-$pkgver*

	mkdir -p build && cd build

	meson			\
	--prefix=/usr		\
	--buildtype=release	\
	-D fribidi=false	\
	-D gnutls=false

	ninja
}

package() {
	cd $pkgname-$pkgver*/build

	DESTDIR=$pkgdir ninja install
}
