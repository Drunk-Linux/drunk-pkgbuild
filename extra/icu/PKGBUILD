pkgname=icu
pkgver=69.1
pkgrel=1
arch=('x86_64')
depends=(llvm doxygen)
source=(https://github.com/unicode-org/icu/releases/download/release-69-1/icu4c-69_1-src.tgz)

build() {
	cd $pkgname

	cd source

	./configure --prefix=/usr
	make
}

package() {
	cd $pkgname/source
	make DESTDIR=$pkgdir install
}
