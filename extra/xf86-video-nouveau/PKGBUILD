pkgname=xf86-video-nouveau
pkgver=1.0.17
pkgrel=2
arch=('x86_64')
depends=(xorg-server)
source=(https://x.org/pub/individual/driver/$pkgname-$pkgver.tar.bz2)

build() {
	cd $pkgname-$pkgver

	./configure		\
	--prefix=/usr

	make
}

package() {
	cd $pkgname-$pkgver
	make DESTDIR=$pkgdir install
	mkdir -p $pkgdir/etc/X11/xorg.conf.d
}
