pkgname=pcre
pkgver=8.45
pkgrel=1
arch=('x86_64')
depends=(valgrind)
source=(http://fossies.org/linux/misc/pcre-8.45.tar.bz2)

build() {
	cd $pkgname-$pkgver

	./configure			\
	--prefix=/usr			\
	--enable-unicode-properties	\
	--enable-pcre16			\
	--enable-pcre21			\
	--enable-pcregrep-libz		\
	--enable-pcregrep-libbz2	\
	--enable-pcretest-libreadline

	make
}

package() {
	cd $pkgname-$pkgver

	make DESTDIR=$pkgdir install
}
