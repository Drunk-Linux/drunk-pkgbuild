pkgname=gtk+
pkgver=3.24.30
pkgrel=1
arch=('x86_64')
depends=(at-spi2-atk gdk-pixbuf libepoxy pango gtk-doc cairo libxkbcommon)
makedepends=(meson wayland wayland-protocols)
source=(https://download.gnome.org/sources/$pkgname/3.24/$pkgname-$pkgver.tar.xz)

build() {
	cd $pkgname-$pkgver

	./configure			\
	--prefix=/usr			\
	--sysconfdir=/etc		\
	--enable-wayland-backend	\
	--enable-x11-backend		\
	--disable-cairo

	make
}

package() {
	cd $pkgname-$pkgver

	make DESTDIR=$pkgdir install
}
