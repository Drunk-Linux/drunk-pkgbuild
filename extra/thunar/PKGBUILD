pkgname=thunar
pkgver=4.16.8
pkgrel=1
arch=('x86_64')
depends=(exo hicolor-icon-theme libgudev)
source=(https://archive.xfce.org/src/xfce/$pkgname/4.16/$pkgname-$pkgver.tar.bz2)

build() {
	cd $pkgname-$pkgver

	./configure --prefix=/usr --sysconfdir=/etc

	make
}

package() {
	cd $pkgname-$pkgver

	make DESTDIR=$pkgdir install
}
