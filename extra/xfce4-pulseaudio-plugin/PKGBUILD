pkgname=xfce4-pulseaudio-plugin
pkgver=0.4.3
pkgrel=1
arch=('x86_64')
depends=(dbus-glib libnotify pulseaudio xfce4-panel)
source=(https://archive.xfce.org/src/panel-plugins/$pkgname/0.4/$pkgname-$pkgver.tar.bz2)

build() {
	cd $pkgname-$pkgver

	./configure		\
	--prefix=/usr

	make
}

package() {
	cd $pkgname-$pkgver

	make DESTDIR=$pkgdir install
}
