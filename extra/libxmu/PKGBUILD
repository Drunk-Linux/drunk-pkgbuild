pkgname=libxmu
pkgver=master
pkgrel=1
arch=('x86_64')
depends=(libxext libx11 xorgproto libxt)
source=(git+https://gitlab.freedesktop.org/xorg/lib/libxmu.git)

build() {
	cd $pkgname

	NOCONFIGURE=1 ./autogen.sh
	./configure --prefix=/usr --libdir=/usr/lib
	make
}

package() {
	cd $pkgname

	make DESTDIR=$pkgdir install
}
