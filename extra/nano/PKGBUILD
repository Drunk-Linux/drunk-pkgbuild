# Description: Utilities to administer Access Control Lists, which are used to define more fine-grained discretionary access rights for files and directories
# URL:         http://savannah.nongnu.org/projects/acl
# Maintainer:  Emmett1, emmett1 dot 2miligrams at gmail dot com
# Depends on:  

pkgname=nano
pkgver=5.9
pkgrel=1
arch=('x86_64')
source=(https://nano-editor.org/dist/v5/$pkgname-$pkgver.tar.gz)

build() {
        cd $pkgname-$pkgver

	./configure --prefix=/usr         \
	            --bindir=/bin         \
	            --sysconfdir=/etc      \
	            --docdir=/usr/share/doc/nano
        make
}

package() {
	cd $pkgname-$pkgver
	make DESTDIR=$pkgdir install
	
	install -v -m644 doc/{nano.html,sample.nanorc} $pkgdir/usr/share/doc/nano
}
