pkgname=xfce4-power-manager
pkgver=4.16.0
pkgrel=1
arch=('x86_64')
depends=(libnotify upower xfce4-panel)
source=(https://archive.xfce.org/src/xfce/$pkgname/4.16/$pkgname-$pkgver.tar.bz2)

build() {
	cd $pkgname-$pkgver

	./configure --prefix=/usr --sysconfdir=/etc

	make
}

package() {
	cd $pkgname-$pkgver

	make DESTDIR=$pkgdir install
}
