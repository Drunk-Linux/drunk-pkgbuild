pkgname=gdk-pixbuf
pkgver=2.42.6
pkgrel=1
arch=('x86_64')
depends=(glib2 libjpeg libpng shared-mime-info libtiff)
source=(https://download.gnome.org/sources/$pkgname/2.42/$pkgname-$pkgver.tar.xz)

build() {
	cd $pkgname-$pkgver
	mkdir -p build && cd build
	
	meson			\
	--prefix=/usr		\
	--buildtype=release	\
	--wrap-mode=nofallback	\
	..

	ninja
}

package() {
	cd $pkgname-$pkgver/build
	DESTDIR=$pkgdir ninja install
}
