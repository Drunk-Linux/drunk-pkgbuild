pkgname=xfce4-panel
pkgver=4.16.3
pkgrel=1
arch=('x86_64')
depends=(libxfce4ui gtk+ gsettings-desktop-schemas)
source=(https://archive.xfce.org/src/xfce/$pkgname/4.16/$pkgname-$pkgver.tar.bz2)

build() {
	cd $pkgname-$pkgver

	./configure --prefix=/usr --sysconfdir=/etc

	make
}

package() {
	cd $pkgname-$pkgver

	make DESTDIR=$pkgdir install
}
