pkgname=wayland-protocols
pkgver=1.24
pkgrel=2
arch=('x86_64')
depends=('base-drunk' 'wayland')
source=(https://wayland.freedesktop.org/releases/$pkgname-$pkgver.tar.xz)

build() {
        cd $pkgname-$pkgver

        mkdir -p build && cd build

	meson		\
	--prefix=/usr	\
	--buildtype=release

	ninja
}

package() {
	cd $pkgname-$pkgver
	cd build
	DESTDIR=$pkgdir ninja install
}
