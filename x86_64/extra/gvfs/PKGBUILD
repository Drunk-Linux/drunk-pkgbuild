pkgname=gvfs
pkgver=1.48.1
pkgrel=2
arch=('x86_64')
depends=(dbus fuse2 glib2 libusb libsecret libsoup gtk+ gtk2+)
source=(https://download.gnome.org/sources/$pkgname/1.48/$pkgname-$pkgver.tar.xz)

build() {
	cd $pkgname-$pkgver

	mkdir -p build && cd build

	meson			\
	--prefix=/usr		\
	--buildtype=release	\
	-D fuse=true		\
	-D gphoto2=false	\
	-D afc=false		\
	-D bluray=false		\
	-D gcr=false		\
	-D udisks2=true		\
	-D cdda=false		\
	-D sftp=false		\
	-D nfs=false		\
	-D mtp=false		\
	-D smb=false		\
	-D tmpfilesdir=false	\
	-D dnssd=false		\
	-D goa=false		\
	-D google=false		\
	..

	ninja
}

package() {
	cd $pkgname-$pkgver/build
	
	DESTDIR=$pkgdir ninja install
}
