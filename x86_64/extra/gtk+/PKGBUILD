pkgname=gtk+
pkgver=3.24.31
pkgrel=3
arch=('x86_64')
depends=(at-spi2-atk gdk-pixbuf libepoxy pango gtk-doc cairo colord libxinerama libxrandr libxfixes libxcomposite libxdamage libxcursor libxi)
makedepends=(meson wayland wayland-protocols)
source=(https://download.gnome.org/sources/$pkgname/3.24/$pkgname-$pkgver.tar.xz)

build() {
	cd $pkgname-$pkgver

	./configure			\
	--prefix=/usr			\
	--sysconfdir=/etc		\
	--enable-wayland-backend	\
	--enable-x11-backend		\
	--enable-cairo			\
	--enable-colord

	make
}

package() {
	cd $pkgname-$pkgver

	make DESTDIR=$pkgdir install
}
