pkgname=libisoburn
pkgver=1.5.4
pkgrel=1
arch=('x86_64')
source=(https://dev.lovelyhq.com/libburnia/libisoburn/archive/release-$pkgver.tar.gz)
depends=('libburn' 'libisofs')

build() {
        cd $pkgname
	
	./bootstrap
	./configure --prefix=/usr         \
	            --bindir=/bin         \
	            --sysconfdir=/etc      \
	            --docdir=/usr/share/doc/nano
        make
}

package() {
	cd $pkgname
	make DESTDIR=$pkgdir install
}
