pkgname=pango
pkgver=1.48.9
pkgrel=1
arch=('x86_64')
depends=(fontconfig freetype2 harfbuzz fribidi glib2 cairo)
source=(https://download.gnome.org/sources/$pkgname/1.48/$pkgname-$pkgver.tar.xz)

prepare() {
	mkdir -p $pkgname-$pkgver/build
}

build() {
	cd $pkgname-$pkgver/build

	meson			\
	--prefix=/usr		\
	--buildtype=release	\
	--wrap-mode=nofallback	\
	..

	ninja
}

package() {
	cd $pkgname-$pkgver/build

	DESTDIR=$pkgdir	ninja install
}
