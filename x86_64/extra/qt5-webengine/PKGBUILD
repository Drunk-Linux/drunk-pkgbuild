pkgname=qt5-webengine
pkgver=5.15.2
pkgrel=1
arch=('x86_64')
depends=(qt5 nodejs nss pciutils)
makedepends=(extra-cmake-modules)
source=(https://anduin.linuxfromscratch.org/BLFS/qtwebengine/qtwebengine-5.15.8.tar.xz
	https://www.linuxfromscratch.org/patches/blfs/svn/qtwebengine-5.15.8-build_fixes-1.patch)

prepare() {
	cd qtwebengine-5.15.8

	patch -Np1 -i ../qtwebengine-5.15.8-build_fixes-1.patch

	mkdir -pv .git src/3rdparty/chromium/.git

	#Fake to be 5.15.2
	sed -e '/^MODULE_VERSION/s/5.*/5.15.2/' -i .qmake.conf

	find -type f -name "*.pr[io]" |
		xargs sed -i -e 's|INCLUDEPATH += |&$$QTWEBENGINE_ROOT/include |'

	sed -e '/link_pulseaudio/s/false/true/' \
		-i src/3rdparty/chromium/media/media_options.gni

	sed -i 's/NINJAJOBS/NINJA_JOBS/' src/core/gn_run.pro
}

build() {
	cd qtwebengine-5.15.8
	mkdir -p build && cd build

#	qmake .. -- -system-ffmpeg -webengine-icu
	echo "[!]: Configure done"

#	make
	echo "[!]: build done"
}

package() {
	cd qtwebengine-5.15.8/build

	mkdir -p $pkgdir/usr
	make INSTALL_ROOT=$pkgdir install
}
