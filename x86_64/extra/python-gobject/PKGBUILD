pkgname=python-gobject
pkgver=3.42.1
pkgrel=1
arch=(x86_64)
depends=(gobject-introspection python3 python-cairo)
makedepends=(cairo gobject-introspection git meson)
checkdepends=(gtk3+ xorg-server)
commitid=110abf1868c7d4175a3a6944e25b98c957e81db4  # 3.42.1
source=("git+https://gitlab.gnome.org/GNOME/pygobject.git#commit=$commitid")

build() {
	meson pygobject build --prefix=/usr

	meson compile -C build
}

package() {
	meson install -C build --destdir "$pkgdir"

	# Compile and optimize
	python -m compileall -d /usr/lib "$pkgdir/usr/lib"
	python -O -m compileall -d /usr/lib "$pkgdir/usr/lib"
}
