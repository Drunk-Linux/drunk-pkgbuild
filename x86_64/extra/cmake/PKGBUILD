# Description: Utilities to administer Access Control Lists, which are used to define more fine-grained discretionary access rights for files and directories
# URL:         http://savannah.nongnu.org/projects/acl
# Maintainer:  Emmett1, emmett1 dot 2miligrams at gmail dot com
# Depends on:  

pkgname=cmake
pkgver=3.21.2
pkgrel=1
arch=('x86_64')
depends=('libuv' 'libarchive' 'gcc')
source=(https://cmake.org/files/v3.21/$pkgname-$pkgver.tar.gz)

build() {
        cd $pkgname-$pkgver
	
	sed -i '/"lib64"/s/64//' Modules/GNUInstallDirs.cmake
	
	./configure		\
	--prefix=/usr		\
	--system-libs		\
	--no-system-jsoncpp	\
	--no-system-librhash

        make
}

package() {
	cd $pkgname-$pkgver
	make DESTDIR=$pkgdir install
}
