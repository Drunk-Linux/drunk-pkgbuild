pkgname=wayland
pkgver=1.20.0
pkgrel=1
arch=('x86_64')
depends=('base-drunk')
source=(https://wayland.freedesktop.org/releases/$pkgname-$pkgver.tar.xz)

build() {
        cd $pkgname-$pkgver

        mkdir -p build && cd build

	meson			\
	--prefix=/usr		\
	--buildtype=release	\
	-Ddocumentation=false	\

	ninja
}

package() {
	cd $pkgname-$pkgver/build

	DESTDIR=$pkgdir ninja install
}
