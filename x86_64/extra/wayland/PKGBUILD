pkgname=wayland
pkgver=1.20.91
pkgrel=1
arch=('x86_64')
depends=('base-drunk')
source=(https://gitlab.freedesktop.org/wayland/wayland/-/releases/$pkgver/downloads/$pkgname-$pkgver.tar.xz)
options=(!strip)

build() {
        cd $pkgname-$pkgver

        mkdir -p build && cd build

	meson			\
	--prefix=/usr		\
	--buildtype=release	\
	-Ddocumentation=false	\

	ninja
}

package() {
	cd $pkgname-$pkgver/build

	DESTDIR=$pkgdir ninja install
}
