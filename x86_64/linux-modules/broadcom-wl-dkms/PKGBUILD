pkgname=broadcom-wl
pkgver=6.30.223.271
pkgrel=1
arch=(x86_64)
makedepends=(make gcc)
install=broadcom-wl.install
source=("git+https://github.com/Drunk-Linux/broadcom-wl-dkms.git"
	"broadcom-wl.conf")

build() {
	cd $pkgname-dkms

	make
}

package() {
	cd $pkgname-dkms

	make DESTDIR=$pkgdir install

	install -Dm644 $srcdir/broadcom-wl.conf	\
		$pkgdir/lib/modprobe.d/broadcom-wl.conf
}
