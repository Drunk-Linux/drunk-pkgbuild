pkgname=lib32-zlib
rpkgname=zlib
pkgver=1.2.11
pkgrel=1
arch=('x86_64')
source=(https://zlib.net/$rpkgname-$pkgver.tar.xz)

build() {
        cd $rpkgname-$pkgver

	export CC="gcc -m32"
	export CXX="g++ -m32"
	export PKG_CONFIG_PATH="/usr/lib32/pkgconfig"

        ./configure		\
	--prefix=/usr		\
        --libdir=/usr/lib32

	make
}

package() {
        cd $rpkgname-$pkgver
        make DESTDIR=$pkgdir install

        rm -rf "${pkgdir}"/usr/{include,share,bin}
}
