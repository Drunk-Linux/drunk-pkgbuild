pkgname=dracut
pkgver=055
pkgrel=4
arch=('x86_64')
depends=(cpio bash coreutils filesystem findutils grep gzip kmod pkgconf
	procps-ng sed systemd util-linux xz)
source=(https://kernel.org/pub/linux/utils/boot/$pkgname/$pkgname-$pkgver.tar.gz)

build() {
        cd $pkgname-$pkgver

	./configure --prefix=/usr         \
	            --bindir=/bin         \
	            --libexecdir=/usr/lib
        make
}

package() {
	cd $pkgname-$pkgver
	make DESTDIR=$pkgdir install
}
