pkgname=libarchive
pkgver=3.5.2
pkgrel=1
arch=('x86_64')
depends=(acl bzip2 expat lz4 openssl xz zlib zstd)
source=(https://github.com/libarchive/libarchive/releases/download/v$pkgver/libarchive-$pkgver.tar.xz
	0001-unescape-when-extracting-link.patch)

prepare() {
	cd $pkgname-$pkgver

	patch -Np1 -i ../0001-unescape-when-extracting-link.patch
}

build() {
        cd $pkgname-$pkgver

        ./configure		\
	--prefix=/usr		\
	--without-xml2		\
	--without-nettle

        make
}

package() {
	cd $pkgname-$pkgver
        make DESTDIR=$pkgdir install
}
