# Description: A linker, an assembler, and other tools for handling object files
# URL:         
# Maintainer:  Emmett1, emmett1 dot 2miligrams at gmail dot com
# Depends on:  

pkgname=binutils
pkgver=2.36.1
pkgrel=1
arch=('x86_64')
source=(https://ftp.gnu.org/gnu/binutils/$pkgname-$pkgver.tar.xz)

build() {
        cd $pkgname-$pkgver

        mkdir -vp build
        cd       build

        ../configure \
	             --prefix=/usr       \
	             --enable-gold       \
	             --enable-ld=default \
	             --enable-plugins    \
	             --enable-shared     \
	             --disable-werror    \
	             --enable-64-bit-bfd \
	             --with-system-zlib  \
	             --enable-multilib   \
	             --with-lib-path=/usr/lib:/lib:/usr/lib32
        make tooldir=/usr
}

package() {
	cd $pkgname-$pkgver
	cd build
        make tooldir=/usr DESTDIR=$pkgdir install -j1
}
